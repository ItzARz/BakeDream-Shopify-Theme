<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    //transition: all 0.3s ease;
  }

  header {
    position: sticky;
    top: 0;
    font-family: 'Unbounded', sans-serif;
    font-weight: normal;
    font-style: normal;
    color: #fff2e6;
    z-index: 5;
  }

  .bakedream-header {
    display: flex;
    width: 100%;
    max-width: 1620px;
    align-items: center;
    justify-content: space-between;
    background-color: rgba(101, 18, 33, 0.95);
    border-radius: 16px;
    margin: 30px 30px;
    padding: 15px 50px;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .header-nav {
    display: flex;
    font-size: 16px;
    align-items: center;
    gap: 30px;

    & a {
      color: var(--old-lace);
      padding: 5px 20px;
      font-weight: 500;
      text-decoration: none;
      border-radius: 8px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    & a:hover {
      color: #651221;
      background-color: #fff2e6;
    }
  }

  .order-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--old-lace);
    padding: 5px 20px;
    border-radius: 6px;
  }

  .header-icons {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 74px;
    height: 49px;

    & a {
      padding: 5px;
      background: none;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      color: var(--old-lace);
      transition: background-color 0.3s ease, color 0.3s ease;

      &:hover {
        background-color: var(--old-lace);
        color: var(--chocolate-cosmos);
      }
    }

    & a i {
      font-size: 24px;
      align-items: center;
      justify-content: center;
    }
  }

  .cart-count {
    position: absolute;
    top: -6px;
    right: -6px;
    color: var(--onyx);
    background-color: var(--old-lace);
    font-size: 12px;
    font-weight: 500;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 5px;
  }

  .shopping-cart-btn {
    position: relative;
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
    color: var(--old-lace);
    cursor: pointer;
  }

  /* === ESTILOS GENERALES === */
  .hamburger {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
    color: var(--old-lace);
    cursor: pointer;
  }

  .mobile-menu {
    position: fixed;
    display: flex;
    top: 0;
    right: -100%;
    height: fit-content;
    width: 100%;
    border-radius: 8px;
    background-color: rgba(101, 18, 33, 1);
    backdrop-filter: blur(16px);
    padding: 20px;
    flex-direction: column;
    gap: 10px;
    transition: right 0.2s ease;
    z-index: 999;
    text-align: left;
  }

  .mobile-menu a {
    color: var(--old-lace);
    text-decoration: none;
    font-size: 16px;
    padding: 5px 20px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease;
    border: 2px solid transparent;

    &:hover {
      color: var(--chocolate-cosmos);
      background-color: var(--old-lace);
    }
  }

  .mobile-menu .order-btn {
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 10px;
    border: 2px solid var(--old-lace);
    padding: 5px 20px;
    border-radius: 6px;
    margin-top: 20px;
  }

  .mobile-menu.show {
    right: 0;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 24px;
    color: var(--old-lace);
    align-self: flex-end;
    cursor: pointer;
  }

  /* Dispositivos con ancho menor a 1024px (lg) */
  @media (max-width: 1024px) {
    .header-nav {
      display: none;
    }

    .header-icons {
      display: none;
    }

    .hamburger {
      display: block;
    }

    .cart-count {
      position: absolute;
      top: 10px;
      right: 5px;
      color: var(--onyx);
      background-color: var(--old-lace);
      font-size: 12px;
      font-weight: 500;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 5px;
    }
  }

  /* Dispositivos grandes (≥ 1024px) */
  @media (min-width: 1024px) {
    .mobile-menu {
      display: none;
    }
  }
</style>

<header class="bakedream-header">
  <a href="/" class="logo">
    <img
      src="{{ 'brand-logo.svg' | asset_url }}"
      alt="BakeDream Official Logo"
      style="width: 100%; height: auto; max-width: 80px;"
    >
  </a>

  <!-- Menu Icon (Mobile) -->
  <button class="hamburger" id="hamburgerBtn" aria-label="Abrir menú">
    <i data-lucide="menu"></i>
  </button>

  <!-- Navigation Menu Bar (Desktop) -->
  <nav class="header-nav">
    <a href="/">Home</a>
    <a href="/collections/all">Our Cookies</a>
    <a href="/pages/faq">FAQ</a>
    <a href="/pages/order" class="order-btn">Order</a>
  </nav>

  <!-- User Actions -->
  <div class="header-icons">
    {%- if shop.customer_accounts_enabled -%}
      <a
        class="user-btn rounded-btn"
        href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
        rel="nofollow"
      >
        <i data-lucide="user"></i>
      </a>
    {%- endif -%}
    <a href="{{ routes.cart_url }}" class="shopping-cart-btn rounded-btn">
      <i data-lucide="shopping-cart"></i>
      {%- if cart != empty -%}
        {%- if cart.item_count < 100 -%}
          <span aria-hidden="true" class="cart-count" id="cartCount">{{ cart.item_count }}</span>
        {%- endif -%}
        {%- if cart.item_count >= 100 -%}
          <span aria-hidden="true" class="cart-count" id="cartCount">+99</span>
        {%- endif -%}
      {%- endif -%}
    </a>
  </div>

  <!-- Aside menu for mobile -->
  <aside class="mobile-menu" id="mobileMenu">
    <button class="close-btn" id="closeMenuBtn"><i data-lucide="x"></i></button>
    <a href="/">Home</a>
    <a href="/collections/all">Our Cookies</a>
    <a href="/cart" class="shopping-cart-btn">
      Shopping Cart
      {%- if cart != empty -%}
        {%- if cart.item_count < 100 -%}
          <span aria-hidden="true" class="cart-count" id="cartCount">{{ cart.item_count }}</span>
        {%- endif -%}
        {%- if cart.item_count >= 100 -%}
          <span aria-hidden="true" class="cart-count" id="cartCount">+99</span>
        {%- endif -%}
      {%- endif -%}
    </a>
    <a href="/pages/faq">FAQ</a>
    {%- if shop.customer_accounts_enabled -%}
      <a href="/login" class="order-btn">Log In <i data-lucide="user"></i></a>
    {%- endif -%}
  </aside>
</header>
<script>
  /* Menu Mobile JS */
  document.addEventListener('DOMContentLoaded', () => {
    const menu = document.getElementById('mobileMenu');
    const openBtn = document.getElementById('hamburgerBtn');
    const closeBtn = document.getElementById('closeMenuBtn');

    openBtn.addEventListener('click', () => {
      menu.classList.add('show');
    });

    closeBtn.addEventListener('click', () => {
      menu.classList.remove('show');
    });

    // Cerrar al hacer clic fuera del menú
    window.addEventListener('click', (e) => {
      if (!menu.contains(e.target) && !openBtn.contains(e.target)) {
        menu.classList.remove('show');
      }
    });
  });

