      </defs>
    </svg>
    <img src="{{ 'hero-mask.webp' | asset_url }}" alt="Chica BakeDream" width="981" height="785" loading="lazy">
  </div>
</section>
<script>
  /* GSAP Animations JS */
  document.addEventListener('DOMContentLoaded', () => {
    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.hero',
        start: 'top 40%',
        toggleActions: 'play reset play reverse',
      },
      defaults: { ease: 'power1.out', duration: 0.7 },
    });

    tl.fromTo('.bakedream-btn', { y: 50, opacity: 0 }, { y: 0, opacity: 1 }, '=0.3').fromTo(
      '.hero-image',
      { x: 50, opacity: 0 },
      { x: 0, opacity: 1 },
      '-=0.5s'
    );

    gsap.utils.toArray('.bd-experience__feature').forEach((el, i) => {
      gsap.from(el, {
        scrollTrigger: {
          trigger: el,
          start: 'top 85%',
        },
        opacity: 0,
        y: 60,
        duration: 1,
        delay: i * 0.1,
        ease: 'power2.out',
      });
    });

    gsap.utils.toArray('.bd-features__feature').forEach((el, i) => {
      gsap.from(el, {
        scrollTrigger: {
          trigger: el,
        },
        opacity: 0,
        duration: 0.5,
        delay: i * 0.3,
        ease: 'power2.in',
      });
    });
  });
</script>
